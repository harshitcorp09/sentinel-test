# This policy uses the Sentinel tfplan/v2 import to require that
# all EC2 instances have instance types from an allowed list

import "tfplan/v2" as tfplan

# Allowed EC2 Instance Types
# Include "null" to allow missing or computed values
allowed_types = ["t2.small", "t2.medium", "t2.large"]

# Get all EC2 instances
allEC2Instances = filter tfplan.resources.aws_instance as _, instances {
  all true
}

# Filter to EC2 instances with violations
violatingEC2Instances = filter allEC2Instances as _, instance {
  instance_type = instance.config.instance_type
  not contains(allowed_types, instance_type)
}

# Count violations
violations = length(violatingEC2Instances)

# Main rule
main = rule {
  violations is 0
}
